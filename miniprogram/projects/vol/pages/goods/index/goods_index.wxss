@import "../../../style/skin.wxss";

page {
	background-color: #fff;
}

.list {
	margin-top: 10rpx;
	background-color: #fff;
	width: 100%;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	flex-wrap: wrap;
	padding: 0 20rpx;
}

.list .item {
	width: 50%;
	padding: 10rpx 15rpx 20rpx;
	display: flex;
	flex-direction: column;
	overflow: hidden;
}

.list .item .item-inner {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	border-radius: 10rpx;
}

.list .item .item-inner image {
	width: 100%;
	height: 220rpx;
	border-top-left-radius: 10rpx;
	border-top-right-radius: 10rpx;
	border: 1rpx solid #ddd;
	position: relative;
}

.list .item .item-inner .attention {
	position: absolute;
	right: 10rpx;
	bottom: 10rpx;
	color: #fff;
	display: flex;
	font-size: 22rpx;
}


.list .item .item-inner .attention .left {
	background-color: rgb(0, 177, 194, .8);
	padding: 6rpx 12rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-top-left-radius: 30rpx;
	border-bottom-left-radius: 30rpx;
}

.list .item .item-inner .attention .right {
	background-color: rgb(223, 151, 192, .8);
	padding: 6rpx 12rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-top-right-radius: 30rpx;
	border-bottom-right-radius: 30rpx;
}


.list .item .item-inner .detail {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	padding: 0 10rpx 20rpx;
}

.list .item .item-inner .detail .title {
	width: 100%;
	text-align: left;
	color: #333;
	font-size: 28rpx;
	font-weight: bold;
	margin-top: 20rpx;
}

.list .item .item-inner .detail .title .ticon {
	font-size: 30rpx;
	font-weight: bold;
	margin-right: 0rpx;
}

.shadow {
	box-shadow: 6rpx 9rpx 8rpx #eee;
}